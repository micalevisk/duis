#!/usr/bin/env node
'use strict';

const program = require('commander');
const pkg = require('../package.json');

program
  .description(pkg.description)
  .version(pkg.version);

program
  // .command('checkup [path/to/config_file]', 'check all lookup files')
  .command('exec [path/to/config_file] <path/to/trab_file> [options]', 'run Duis above current directory',  { isDefault: true })
  .command('init [path/to/root] [options]', 'create a `duis.config.js` file with default values')
  .command('uplookups [path/to/config_file] [options]', 'update lookup files entry values')

  .parse(process.argv);
